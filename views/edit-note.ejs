<%- include ("./partials/header.ejs") %>
<section class="max-w-[1200px] mx-auto my-10 px-32">
    <div class="flex flex-row gap-10">
        <form action="/<%= note._id %>?_method=PUT" method="POST">
            <div class="flex gap-10 items-center">
                <label for="title" class="text-3xl font-bold">Title: </label>
                <input type="text" name="title" id="title" class="border border-black" value="<%= note.title %>" required>
            </div>
            <div class="flex gap-10 items-center">
                <label for="content">Content: </label>
                <textarea name="content" id="content" class="border border-black"><%- note.content %></textarea>
            </div>
            <button class="bg-slate-500 p-2 rounded hover:bg-slate-700" type="submit" type="submit">Save</button>
        </form>
    </div>
 </section>
 <script src="https://cdn.tiny.cloud/1/zhdlysumdedwffpeawt09bnj5av2hx758vu7ccdxn67q5qu1/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
<script>
  tinymce.init({
    selector: '#content', 
    plugins: 'advlist autolink lists link image charmap preview anchor searchreplace visualblocks code fullscreen insertdatetime media table help',
    toolbar: 'undo redo | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | help',
    menubar: false, 
  });
</script>
